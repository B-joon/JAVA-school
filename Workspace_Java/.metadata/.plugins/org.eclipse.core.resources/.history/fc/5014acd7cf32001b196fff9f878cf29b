package com.cal;

import java.time.DayOfWeek;
import java.util.Scanner;

// 달력 만들어 주세요.
// java.util.Calender
public class DayOfCalender {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		System.out.print("년 : ");
		int year = sc.nextInt();
		System.out.print("\n월 : (ex/1 ~ 12)");
		int month = sc.nextInt();

		System.out.println();
		System.out.println(year + "년 " + month + "월 ");
		System.out.println("===================================================");
		System.out.println(" Sun\tMon\tTue\tWed\tThu\tFri\tSat");
		System.out.println("---------------------------------------------------");

		int lastYear = year - 1;
		int totalDay = (lastYear * 365) + (lastYear / 4) + (lastYear / 100) + (lastYear / 400) + 1;
		int week = totalDay % 7;

		if (month > 12) {
			System.out.println("월을 다시 입력해주세요.");
			month = sc.nextInt();
		}

		int i = 0;
		for (; i < week; i++) {
			System.out.print("   ");
		}
		int lastDay = 1;

		if (month == 4 || month == 6 || month == 9 || month == 11) {
			lastDay = 30;
		} else if (month == 2) {
			lastDay = LeapYear.isLeapYear(year) ? 29 : 28;
		} else {
			lastDay = 31;
		}

		for (int j = 1; j <= lastDay; j++, i++) {
			
			if (i % 7 == 0) {
				System.out.println();
			}
			System.out.printf("%4d", j);
		}
		System.out.println();
		System.out.println("===================================================");

		sc.close();
	}

}
