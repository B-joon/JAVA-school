package com.homework;

import java.util.Scanner;

public class Pascal {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("단계를 입력하세요 : ");
		int n = sc.nextInt();

		int[] a = new int[n+1];

		a[0] = 1;

		for(int i=0; i<5; i++) {

			for(int j=i; j != 0; j--) {

				a[j] = a[j] + a[j-1];

			}

			for(int j=0; j <a.length; j++) {

				System.out.print(a[j]);

			}

			System.out.println("");

		}

	}

}
