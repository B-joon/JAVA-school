package com.homework;

import java.util.Calendar;

public class Calendars {

	public static void main(String[] args) {

		Calendar cal = Calendar.getInstance();
		int year = 2020;
		int month = 11;

		int today = cal.get(Calendar.DATE);
		cal.set(Calendar.YEAR, Integer.valueOf(year));
		cal.set(Calendar.MONTH, Integer.valueOf(month) - 1);// 시작일이 1이 아닌 0부터 시작이라서
		cal.set(Calendar.DAY_OF_MONTH, 1);
		int lastDay = cal.getActualMaximum(Calendar.DATE); // 당월의 마지막 날짜까지
		int week = cal.get(Calendar.DAY_OF_WEEK);

		System.out.println();
		System.out.println(year + "년 " + month + "월");
		System.out.println("===================================================");
		System.out.println(" Sun\tMon\tTue\tWed\tThu\tFri\tSat");
		System.out.println("---------------------------------------------------");

		int i = 0;
		for (; i < week - 1; i++) {
			System.out.print("\t");
		}

		for (int j = 1; j <= lastDay; j++, i++) { // 1일~마지막 날까지 반복
			if (i % 7 == 0) { //7의 배수
				System.out.println();// 달력에서 탈출하지 않게 줄바꿈
			} else if (j == today) {
				System.out.print("★");
			}
			System.out.print(j + "\t");
		}
		System.out.println();
		System.out.println("===================================================");
	}

}

