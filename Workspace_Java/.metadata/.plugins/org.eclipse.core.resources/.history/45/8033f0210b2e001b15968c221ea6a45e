package com.homework;

import java.util.Calendar;

public class Calendars {

	public static void main(String[] args) {

		Calendar cal = Calendar.getInstance();

		int nowYear = cal.get(Calendar.YEAR); //현재 년도
		int nowMonth = cal.get(Calendar.MARCH); //현재 월
		int today = cal.get(Calendar.DATE); //현재 날짜?
		int lastDate = cal.getActualMaximum(Calendar.DATE); // 당월의 마지막 날짜까지
		int week = cal.get(Calendar.DAY_OF_WEEK);

		System.out.println();
		System.out.println(nowYear + "년 " + nowMonth + "월");
		System.out.println("===================================================");
		System.out.println(" Sun\tMon\tTue\tWed\tThu\tFri\tSat");
		System.out.println("---------------------------------------------------");

		int i = 0;
		for (; i < week - 1; i++) {
			System.out.print("\t");
		}

		for (int j = 1; j <= lastDate; j++, i++) { // 1일~마지막 날까지 반복
			 if (week % 7 == 0) { //7의 배수
					System.out.println();// 달력에서 탈출하지 않게 줄바꿈
		}
			 System.out.print(j + "\t");
		}
		System.out.println();
		System.out.println("===================================================");
	}
	
}

