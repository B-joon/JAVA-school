package com.test02;

import java.util.Random;

public class RandomCube {

	public static void main(String[] args) {
		/*
		 * 1 ~ 9 사이의 난수로 이루어진
		 * 5 * 5 형태의 숫자들을 출력하고,
		 * 전체 난수의 합,
		 * 전체 난수의 평균,
		 * x의 합을 구하자
		 */
		prnCube();

	}
	
	public static void prnCube() {
		
		Random ran = new Random();
		
		int sum = 0;
		
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				int r = ran.nextInt(10);
				System.out.printf("%2d",r);
				
				sum += r;
			}
			System.out.println();
			
		}
		float avg = (float) (sum / 10f);
		System.out.printf("난수의 합 : %d\n",sum);
		System.out.printf("난수의 평균 : %.2f", avg);
//		
		
		
	}

}
